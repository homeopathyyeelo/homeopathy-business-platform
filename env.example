# ========================================
# HOMEOPATHY BUSINESS PLATFORM
# Environment Configuration Template
# ========================================
# Copy this file to .env and update values
# cp env.example .env

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/yeelo_homeopathy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=yeelo_homeopathy
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# ========================================
# KAFKA CONFIGURATION
# ========================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=yeelo-homeopathy
KAFKA_GROUP_ID=yeelo-consumer-group
ZOOKEEPER_CONNECT=localhost:2181

# ========================================
# MINIO / S3 CONFIGURATION
# ========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=yeelo-homeopathy

# ========================================
# JWT & AUTHENTICATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# API KEYS
# ========================================
# OpenAI API Key (for AI content generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google API Key (for Google Business Profile)
GOOGLE_API_KEY=your-google-api-key-here

# WhatsApp Business API
WHATSAPP_API_KEY=your-whatsapp-api-key-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# SMS Provider (Twilio, etc.)
SMS_API_KEY=your-sms-api-key-here
SMS_API_SECRET=your-sms-api-secret-here

# ========================================
# NEXT.JS CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_APP_NAME=Yeelo Homeopathy
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# SERVICE PORTS
# ========================================
# Frontend
NEXTJS_PORT=3000

# Backend APIs
NESTJS_PORT=3001
FASTIFY_PORT=3002
EXPRESS_PORT=3003
GOLANG_PORT=3004

# AI & Gateways
AI_SERVICE_PORT=8001
GRAPHQL_GATEWAY_PORT=4000
API_GATEWAY_PORT=5000

# Infrastructure
POSTGRES_PORT=5433
REDIS_PORT=6380
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
KAFKA_UI_PORT=8080
SCHEMA_REGISTRY_PORT=8081

# ========================================
# SERVICE URLS (Internal)
# ========================================
NEST_API_URL=http://api-nest:3001
FASTIFY_API_URL=http://api-fastify:3002
EXPRESS_API_URL=http://api-express:3003
GOLANG_API_URL=http://api-golang:3004
AI_SERVICE_URL=http://ai-service:8001

# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=development
# NODE_ENV=production
# NODE_ENV=staging

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
# LOG_LEVEL=debug
# LOG_LEVEL=error

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:4000,http://localhost:5000
CORS_CREDENTIALS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yeelo-homeopathy.com

# ========================================
# PAYMENT GATEWAY
# ========================================
# Razorpay (India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Stripe (International)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# ========================================
# ANALYTICS
# ========================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ========================================
# MONITORING
# ========================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_FEATURES=true
ENABLE_WHATSAPP_MARKETING=true
ENABLE_SMS_MARKETING=true
ENABLE_EMAIL_MARKETING=true
ENABLE_SOCIAL_MEDIA_AUTOMATION=true
ENABLE_MULTI_CURRENCY=true
ENABLE_MULTI_LANGUAGE=true

# ========================================
# AI/ML CONFIGURATION
# ========================================
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
ENABLE_LOCAL_LLM=false
LOCAL_LLM_URL=http://localhost:11434

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ========================================
# FILE UPLOAD
# ========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ========================================
# BUSINESS CONFIGURATION
# ========================================
DEFAULT_CURRENCY=INR
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=Asia/Kolkata
TAX_RATE=18

# ========================================
# SOCIAL MEDIA
# ========================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
YOUTUBE_API_KEY=your-youtube-api-key

# ========================================
# WORDPRESS INTEGRATION
# ========================================
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-wordpress-username
WORDPRESS_APP_PASSWORD=your-wordpress-app-password

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=yeelo-backups

# ========================================
# DEVELOPMENT TOOLS
# ========================================
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_MODE=true

# ========================================
# PRODUCTION SETTINGS
# ========================================
# Uncomment for production
# ENABLE_SWAGGER=false
# ENABLE_GRAPHQL_PLAYGROUND=false
# ENABLE_DEBUG_MODE=false
# NODE_ENV=production
# LOG_LEVEL=error
