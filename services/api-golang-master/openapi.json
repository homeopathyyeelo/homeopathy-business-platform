{
  "openapi": "3.0.3",
  "info": { "title": "Homeopathy Go API", "version": "0.1.0" },
  "paths": {
    "/healthz": {
      "get": {
        "summary": "Health check",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/products": {
      "get": {
        "summary": "List products (demo)",
        "responses": {
          "200": {
            "description": "Products",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "price": { "type": "number" }
        }
      }
    }
  }
}


