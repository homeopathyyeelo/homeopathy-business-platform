# Marketplace Integration Environment Variables
# Copy to .env and configure with actual credentials

# ============================================================================
# MARKETPLACE CREDENTIALS
# ============================================================================

# Amazon MWS/SP-API
AMAZON_SELLER_ID=
AMAZON_MWS_AUTH_TOKEN=
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_REGION=us-east-1
AMAZON_MARKETPLACE_ID=
AMAZON_SP_API_ENDPOINT=https://sellingpartnerapi-na.amazon.com

# Flipkart Seller API
FLIPKART_APP_ID=
FLIPKART_APP_SECRET=
FLIPKART_SELLER_ID=
FLIPKART_API_ENDPOINT=https://api.flipkart.net/sellers

# Meesho
MEESHO_API_KEY=
MEESHO_SUPPLIER_ID=
MEESHO_API_ENDPOINT=https://api.meesho.com

# ============================================================================
# IRN / GST / EWAY BILL (Indian Compliance)
# ============================================================================

# GST Sandbox/Production
GST_ENVIRONMENT=sandbox
GST_API_BASE_URL=https://gsp.adaequare.com/test/enriched/ei/api
GST_USERNAME=
GST_PASSWORD=
GST_CLIENT_ID=
GST_CLIENT_SECRET=
GST_GSTIN=
GST_IP_ADDRESS=

# IRN Generation
IRN_ENABLED=true
IRN_AUTO_GENERATE=true
IRN_SANDBOX_MODE=true

# eWay Bill
EWAY_BILL_ENABLED=true
EWAY_BILL_USERNAME=
EWAY_BILL_PASSWORD=
EWAY_BILL_API_URL=https://api.mastergst.com/ewaybillapi/v1.03

# ============================================================================
# MESSAGE QUEUE & BACKGROUND JOBS
# ============================================================================

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_MARKETPLACE_QUEUE=marketplace_orders
RABBITMQ_IRN_QUEUE=irn_generation
RABBITMQ_WEBHOOK_QUEUE=marketplace_webhooks

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_PREFIX=erp:queue:

# ============================================================================
# SECURITY
# ============================================================================

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=homeopathy-erp

# Encryption (AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-here!!
ENCRYPTION_IV=your-16-byte-iv

# HMAC Webhook Verification
WEBHOOK_SECRET_AMAZON=
WEBHOOK_SECRET_FLIPKART=
WEBHOOK_SECRET_MEESHO=

# Rate Limiting
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MARKETPLACE_WEBHOOK=1000

# ============================================================================
# MICROSERVICE CONFIGURATION
# ============================================================================

# Marketplace Integration Service
MARKETPLACE_SERVICE_PORT=8001
MARKETPLACE_SERVICE_HOST=localhost
MARKETPLACE_POLLING_INTERVAL=300
MARKETPLACE_RETRY_ATTEMPTS=3
MARKETPLACE_TIMEOUT=30s

# Main ERP API
ERP_API_URL=http://localhost:3005
ERP_API_KEY=your-internal-api-key

# ============================================================================
# NOTIFICATION & ALERTS
# ============================================================================

# Email (for order notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@homeopathyerp.com

# SMS (for OTP, alerts)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/marketplace-integration.log

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
